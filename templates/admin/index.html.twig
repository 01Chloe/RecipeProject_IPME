{% extends 'base-admin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<main class="main">
    <div class="dashboard-admin">
        <h1 class="title">Tableau de bord</h1>
         <div>
            <h2 class="title-profil">Recettes à valider :</h2>
{#             {% if recipes %}#}
{#             {% else %}#}
                 <p class="padding">Aucune recette à valider</p>
{#             {% endif %}#}
         </div>
        <div>
            <h2 class="title-profil">Commentaires à valider :</h2>
            {% if comments %}
                {% for comment in comments %}
                    <div class="commment admin-comment">
                        <div class="comment-content-area admin">
                            <div>
                                <p>{{ comment.user.email }}</p>
                                <a href="{{ path('app_recipe', {'id': comment.recipe.id}) }}" class="link">Voir la recette</a>
                            </div>
                            <div>
                                <p class="comment-title">{{ comment.title }}</p>
                                <p class="comment-content">{{ comment.comment }}</p>
                            </div>
                        </div>
                        <div class="comment-modification-area">
                            <a href="{{ path('app_admin_add_comment', {'id': comment.id}) }}" class="comment-icon">
                                <svg class="comment-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#1a252f" d="M530.8 134.1C545.1 144.5 548.3 164.5 537.9 178.8L281.9 530.8C276.4 538.4 267.9 543.1 258.5 543.9C249.1 544.7 240 541.2 233.4 534.6L105.4 406.6C92.9 394.1 92.9 373.8 105.4 361.3C117.9 348.8 138.2 348.8 150.7 361.3L252.2 462.8L486.2 141.1C496.6 126.8 516.6 123.6 530.9 134z"/></svg>
                            </a>
                            <a href="{{ path('app_admin_delete_comment', {'id': comment.id}) }}" class="comment-icon">
                                <svg class="comment-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#e06539" d="M183.1 137.4C170.6 124.9 150.3 124.9 137.8 137.4C125.3 149.9 125.3 170.2 137.8 182.7L275.2 320L137.9 457.4C125.4 469.9 125.4 490.2 137.9 502.7C150.4 515.2 170.7 515.2 183.2 502.7L320.5 365.3L457.9 502.6C470.4 515.1 490.7 515.1 503.2 502.6C515.7 490.1 515.7 469.8 503.2 457.3L365.8 320L503.1 182.6C515.6 170.1 515.6 149.8 503.1 137.3C490.6 124.8 470.3 124.8 457.8 137.3L320.5 274.7L183.1 137.4z"/></svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
            <p class="padding">Aucun commentaire à valider</p>
            {% endif %}
        </div>
    </div>
</main>
{% endblock %}
