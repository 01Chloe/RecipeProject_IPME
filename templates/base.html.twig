<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Nom du site{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="header">
                <div class="header-logo"></div>
                <a href="#">
                    <img src="{{ asset('assets/icons/user.svg') }}" alt="profil" class="user-btn">
                </a>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <footer class="footer">
                <div class="footer-logo-container">
                    <div class="footer-logo"></div>
                    <h2 class="footer-title">Nom du site</h2>
                </div>
                <div class="footer-links-group">
                    <p>Nous retrouver</p>
                    <div class="footer-links">
                        <a href="#">
                            <img src="{{ asset('assets/icons/instagram-brands.svg') }}" alt="instagram">
                        </a>
                        <a href="#">
                            <img src="{{ asset('assets/icons/pinterest-brands.svg') }}" alt="pinterest">
                        </a>
                        <a href="#">
                            <img src="{{ asset('assets/icons/youtube-brands.svg') }}" alt="youtube">
                        </a>
                    </div>
                </div>
                <p class="footer-infos">© 2025 - Nomdusite - Tous droits réservés </p>
            </footer>
        {% endblock %}
    </body>
</html>
