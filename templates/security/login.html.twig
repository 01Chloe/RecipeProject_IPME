{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="main">
    <form method="post" class="padding">
        {% if error %}
            <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="title">Connection</h1>
        <div class="input-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" autocomplete="email" required autofocus>
        </div>
        <div class="input-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="input" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="submit-group">
            <label>
                <input type="checkbox" name="_remember_me" class="checkbox"> Se souvenir de moi
            </label>
            <button class="btn" type="submit">
                Se connecter
            </button>
            <a href="{{ path('app_register') }}" class="link">S'inscrire</a>
        </div>

    </form>
</main>

{% endblock %}
